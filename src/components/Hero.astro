---
import { Image } from 'astro:assets';
import PocketWatchResized from '../images/PocketWatchResized.png';
import statue from '../images/statue.webp';
---

<div class="hero-container">
  <div class="main-wrapper">
    <div class="leyend-container">
      <div class="card px-6 pb-4">
        <h2 class="mb-5">
          Tasaciones a domicilio <br>
          <color>sin cargo</color>
        </h2>
        <p>Al mejor precio del mercado</p>
        <button class="rounded-md bg-primary px-7 py-4 mt-12">
          CONT√ÅCTENOS
        </button>
      </div>
    </div>
    <div class="image-container">
      <Image
        src={statue}
        alt="Reloj de bolsillo dorado"
        loading='lazy'
        decoding='sync'
      />
    </div>
  </div>
</div>

<style>
  .hero-container {
    background-image: linear-gradient(to bottom, #000000, #292929, #535252, #908f8d, #dadada);
    height: fit-content;
    color: white;
    padding-top: 60px;

    .main-wrapper {
      width: 90%;
      margin: auto;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      height: inherit;

      .leyend-container {
        flex: 0 0 60%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        
        .card {
          width: fit-content;

          h2 {
            font-size: 60px;
            line-height: 64px;
            font-family: 'PoppinsMedium';
            color {
              color: #f8c201;
            }
          }
          p {
            font-family: 'PoppinsRegular';
            font-size: 25px;
            line-height: 30px;
          }

          button {
            background-color: #f8c201;
            font-family: 'PoppinsRegular';
          }
        }
      }

      .image-container {
        flex: 0 0 40%;
        display: inherit;
        justify-content: space-around;
        align-items: center;

        img {
          width: 50vh;
        }
      }
    }
  }
</style>