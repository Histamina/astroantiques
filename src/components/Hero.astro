---
import { Image } from 'astro:assets';
import PocketWatchResized from '../images/PocketWatchResized.png';
---

<div class="hero-container">
  <div class="main-wrapper">
    <div class="leyend-container">
      <h2>
        Tasaciones a domicilio <br>
        sin cargo
      </h2>
      <button>
        Contacto
      </button>
    </div>
    <div class="image-container">
      <Image
        src={PocketWatchResized}
        alt="Reloj de bolsillo dorado"
        loading='lazy'
        decoding='sync'
      />
    </div>
  </div>
</div>

<style>
  .hero-container {
    background-image: linear-gradient(to bottom, #000000, #292929, #535252, #908f8d, #dadada);
    height: 90vh;
    color: white;

    .main-wrapper {
      width: 87%;
      margin: auto;
      display: flex;
      justify-content: space-between;
      height: inherit;

      .leyend-container {
        flex: 0 0 40%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;

        h2 {
          font-size: 40px;
          line-height: 44px;
        }
      }

      .image-container {
        flex: 0 0 50%;
        display: inherit;
        justify-content: flex-end;
        align-items: center;

        img {
          width: 58vh;
        }
      }
    }
  }
</style>