---
interface Props {
	title: string;
}
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="relative">
			<Header />
			<Hero />
			<!-- <aside class="[grid-area:aside] flex-col flex overflow-y-auto bg-blue-100">
				ASIDE
			</aside>

			<main class="[grid-area:main] bg-red-200">
				MAIN
			</main>

			<footer class="[grid-area:player] min-h-[100px] bg-white">
				PLAYER
			</footer> -->
		</div>
		<slot />
	</body>
</html>
<style>
	#app {
		min-height: 100vh;
	}
</style>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}

	
	@font-face {
		font-family: 'WorkSansLight';
		src: url('/fonts/WorkSans-Light.ttf') format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	
	@font-face {
		font-family: 'WorkSansRegular';
		src: url('/fonts/WorkSans-Regular.ttf'), format('ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	
	body {
		overflow-x: hidden;
		/* font-family: 'WorkSansLight'; */
	}
</style>
